<h1><%= @user.email %></h1>
<h2>User Details</h2>
<dl class="dl-horizontal">
  <dt>Email Address</dt>
  <dd><%= @user.email %></dd>
</dl>
<ul class="list-inline">
  <li><%= link_to 'Back to List', users_path(@user) %></li>
  <li><%= link_to 'Show teams',  user_teams_path(@user) %></li>
  <li><%= link_to 'Show people', user_people_path(@user) %></li>
  <li><%= link_to "Remove", user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %></li>
</ul>
